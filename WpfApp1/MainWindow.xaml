        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Predator" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="552*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="40" FontStyle="Italic" HorizontalAlignment="Left" Margin="152,184,0,-184" Width="206" Text="Predator" Grid.ColumnSpan="2">
            <TextBlock.Foreground>
                <RadialGradientBrush>
                    <GradientStop Color="#FF5A0000" Offset="0.161"/>
                    <GradientStop Color="#FF672020" Offset="0.603"/>
                    <GradientStop Color="#FF1A2525" Offset="0.878"/>
                    <GradientStop Color="#FF9E8787" Offset="0.982"/>
                    <GradientStop Color="#FF092A26" Offset="0.777"/>
