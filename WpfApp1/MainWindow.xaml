        <Button Margin="73,91,0,62" HorizontalAlignment="Left" Width="256" FontFamily="Fira Code" Foreground="Black" BorderBrush="Black" Click="acceptButton_Click" Background="Black" ClickMode="Press" ForceCursor="True"   Grid.Column="1" OpacityMask="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Cursor="Hand">
            <Button.Style>
                <Style/>
            </Button.Style>
            <StackPanel>
                <Image Source="C:/Users/muham/Pictures/app_icon.ico" Width="250" Height="252"/>
            </StackPanel>
        </Button>

        <Button  VerticalAlignment="Top" Name="StopButt" HorizontalAlignment="Left" Margin="73,372,0,0" Width="82" Grid.Column="1" Click="StopButt_Click" Visibility="Hidden" Background="DarkRed">
            Ok
        </Button>
        <MediaElement Name="Video" Grid.ColumnSpan="2" Margin="53,29,75,62"  Visibility="Hidden"/>
    </Grid>
</Window>
